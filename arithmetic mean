print("Оценка за четверть")

list = []

i = 0

while i < i + 1:
    print1 = "Введите оценку: "
    num = input(print1)
    list.append(num)
    i += 1
    if num == "stop":
        list.pop()
        for i in range(len(list)):
            list[i] = int(list[i])
            i += 1
        result = sum(list) / len(list)
        print(sum(list) , len(list))
        print(round(result))
        break
